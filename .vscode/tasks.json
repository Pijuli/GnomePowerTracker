{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Install",
            "type": "shell",
            "command": "scripts/build.sh -i",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run nestet Gnome Shell",
            "type": "process",
            "command": "dbus-run-session",
            "args": [
                "--",
                "gnome-shell",
                "--nested",
                "--wayland"
            ],
            "problemMatcher": [],
            "isBackground": true,
        }
    ]
}